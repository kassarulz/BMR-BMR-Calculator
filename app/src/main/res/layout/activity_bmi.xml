<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="#438fe6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Here you can put your logo or brand name -->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="30dp"
                android:padding="0dp"
                android:src="@mipmap/bmi" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#00000000"
                android:drawableLeft="@drawable/weight"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Enter your weight in kg"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableLeft="@drawable/height"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Enter your Height in m"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"

                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />


            <ImageButton
                android:id="@+id/calculateBtn"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:src="@drawable/calculate"
                android:padding="16dp"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_gravity="center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/bmiText"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="BMI     = "
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_alignBaseline="@+id/bmiValue"
                    android:layout_alignBottom="@+id/bmiValue"
                    android:layout_toStartOf="@+id/bmiValue" />

                <TextView
                    android:id="@+id/bmiValue"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="26dp" />

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
